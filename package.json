{
		"name": "ritzygal-backend",
		"version": "0.0.0",
		"private": true,
		"nodemonConfig": {
				"exec": "npm run dev",
				"watch": [
						"server/*"
				],
				"ignore": [
						"**/__tests__/**",
						"*.test.js",
						"*.spec.js"
				]
		},
		"scripts": {
				"start": "npm run prod",
				"build": "npm-run-all clean transpile",
				"server": "node -r dotenv/config ./dist-server/bin/www",
				"dev": "cross-env NODE_ENV=development npm-run-all build server",
				"prod": "cross-env NODE_ENV=production npm-run-all build server",
				"transpile": "babel ./server -d dist-server",
				"clean": "rimraf dist-server",
				"watch:dev": "nodemon"
		},
		"dependencies": {
				"@babel/cli": "^7.11.6",
				"@babel/core": "^7.11.6",
				"@babel/preset-env": "^7.11.5",
				"cookie-parser": "~1.4.4",
				"debug": "~2.6.9",
				"express": "~4.16.1",
				"morgan": "~1.9.1"
		},
		"devDependencies": {
				"dotenv": "^8.2.0",
				"nodemon": "^2.0.5"
		}
}
